@model WorkAppMVC.Models.Ilan

<div class="col-md-3">
    <br />
    <!--Filtreleme Kısmı-->
    @using (Html.BeginForm("Filtre", "Home", FormMethod.Get, new { @class = "form-horizontal" }))
    {
        
            <div class="form-group ">
                <label for="inputEmail3" class="col-sm-4 control-label">En Az</label>
                <div class="col-sm-8">
                    <input type="text" name="min" class="form-control" placeholder="En Az(saatlik ücret)">
                </div>
            </div>
            <div class="form-group ">
                <label for="inputEmail3" class="col-sm-4 control-label">En Çok</label>
                <div class="col-sm-8">
                    <input type="text" name="max" class="form-control" placeholder="En Çok(saatlik ücret)">
                </div>
            </div>
            <div class="form-group ">
                <label for="inputEmail3" class="col-sm-4 control-label">Şehir</label>
                <div class="col-sm-8">
                    @if (ViewBag.sehirlist != null)
                    {
                        @Html.DropDownListFor(m => m.SehirId, ViewBag.sehirlist as SelectList, "Şehir Seç", new { @class = "form-control" })
                    }
                </div>
            </div>
            <div class="form-group ">
                <label for="inputEmail3" class="col-sm-4 control-label">İlçe</label>
                <div class="col-sm-8">
                    @Html.DropDownListFor(m => m.IlceId, new SelectList(""), "İlçe Seç", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group ">
                <label for="inputEmail3" class="col-sm-4 control-label">Mahalle</label>
                <div class="col-sm-8">
                    @Html.DropDownListFor(m => m.MahalleId, new SelectList(""), "Mahalle Seç", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group ">
                <label for="inputEmail3" class="col-sm-4 control-label">Çalışma Ortamı</label>
                <div class="col-sm-8">
                    @Html.DropDownListFor(m => m.MekanId, new SelectList(""), "Mekan Seç", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group ">
                <label for="inputEmail3" class="col-sm-4 control-label">Durum</label>
                <div class="col-sm-8">
                    @if (ViewBag.durumlist != null)
                    {
                        @Html.DropDownListFor(m => m.DurumId, ViewBag.durumlist as SelectList, "Durum Seç", new { @class = "form-control" })
                    }
                </div>
            </div>


            <div class="form-group ">
                <label for="inputEmail3" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <button type="submit" class="btn btn-primary btn-block">Filtreleme</button>
                </div>
            </div>
        
    }

</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script>
    $(document).ready(function () {
        $("#SehirId").change(function () {
            var sehirid = $(this).val();
            debugger
            $.ajax({
                type: "Post",
                url: "/Ilan/IlceGetir?SehirId=" + sehirid,
                contentType: "html",
                success: function (response) {
                    debugger
                    $("#IlceId").empty();
                    $("#IlceId").append(response);
                }
            })
        })
    })
</script>
<script>
    $(document).ready(function () {
        $("#IlceId").change(function () {
            var ilceid = $(this).val();
            debugger
            $.ajax({
                type: "Post",
                url: "/Ilan/MahalleGetir?IlceId=" + ilceid,
                contentType: "html",
                success: function (response) {
                    debugger
                    $("#MahalleId").empty();
                    $("#MahalleId").append(response);
                }
            })
        })
    })
</script>
<script>
    $(document).ready(function () {
        $("#DurumId").change(function () {
            var durumid = $(this).val();
            debugger
            $.ajax({
                type: "Post",
                url: "/Ilan/MekanGetir?DurumId=" + durumid,
                contentType: "html",
                success: function (response) {
                    debugger
                    $("#MekanId").empty();
                    $("#MekanId").append(response);
                }
            })
        })
    })
</script>