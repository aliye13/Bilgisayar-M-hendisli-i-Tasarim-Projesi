@model WorkAppMVC.Models.Ilan
@{
    ViewBag.Title = "Detay";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
               

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    @{ int i = 0;}
                    @foreach (var item in ViewBag.imgs)
                            {
                                i++;
                                var active = i == 1 ? "active" : "";
                        <div class="item @active">
                            <img src="/Content/images/@item.ResimAd" alt="..." style="width:1150px;height:400px;">

                        </div>
                    }
                    

                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>
        <!--Slider-->
        <div class="col-md-4">
            <table class="table table-bordered">
                <tbody>
                    <tr><th colspan="2">İlan Özellikleri</th></tr>
                    <tr><td><strong>Açıklama</strong></td><td>@Model.Açıklama</td></tr>
                    <tr><td><strong>Ücret(Saatlik)</strong></td><td>@Model.Ücret</td></tr>
                    <tr><td><strong>Durum</strong></td><td>@Model.Mekan.Durum.DurumAd</td></tr>
                    <tr><td><strong>Mekan</strong></td><td>@Model.Mekan.MekanAd</td></tr>
                    <tr><td><strong>Mesai Süresi</strong></td><td>@Model.MesaiSüresi</td></tr>
                    <tr><td><strong>Görev</strong></td><td>@Model.Görev</td></tr>
                    <tr><td><strong>Mola Süresi</strong></td><td>@Model.MolaSüresi</td></tr>
                    <tr><td><strong>Bahşiş</strong></td><td>
    @if (Model.Bahşiş == true)
    {
        <label class=" label label-success">EVET</label>
    }
    else
    {
        <label class=" label label-danger">HAYIR</label>
    }
</td></tr>
                    <tr><td><strong>Adres</strong></td><td>@Model.Adres</td></tr>
                    <tr><td><strong>Mahalle</strong></td><td>@Model.Mahalle.MahalleAd</td></tr>
                    <tr><td><strong>İlçe</strong></td><td>@Model.Mahalle.Ilce.IlceAd</td></tr>
                    <tr><td><strong>Şehir</strong></td><td>@Model.Mahalle.Ilce.Sehir.SehirAd</td></tr>
                    <tr><td><strong>Telefon</strong></td><td><button class="btn btn-success btn-block">@Model.Telefon</button></td></tr>
                </tbody>
            </table>
        </div>
    </div>

</div>

