@model WorkAppMVC.Models.Mahalle

@{
    ViewBag.Title = "Delete";
}

<div class="container">

    <div class="row">
        @Html.Action("PartialFiltre", "Home")

        <!--İlan Listesi-->
        <br />
        <div class=" col-md-9">
            <div class=" thumbnail" style=" width:845px;">


                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin/Index">Admin Sayfası</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Mahalle Sil</li>
                    </ol>
                </nav>

                <h3>Bu kaydı silmek istediğinizden emin misiniz?</h3>
                <div>

                    <dl class="dl-horizontal">
                        <dt>
                            İlçe Adı
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Ilce.IlceAd)
                        </dd>

                        <dt>
                            Mahalle Adı
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.MahalleAd)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Sil" class="btn btn-danger" /> |
                            @Html.ActionLink("Mahalle Listesi", "Index", null, new { @class = "btn btn-warning" })
                        </div>
                    }
                </div>




            </div>
        </div>



    </div>
</div>

